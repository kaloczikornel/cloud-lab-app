<%- include('header') -%>
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Gallery page</h1>
        <a href="/upload" class="btn btn-primary text-center" style="height: min-content">Upload a new picture</a>
    </div>
    <div class="row">
        <% if (typeof pictures === 'undefined' || pictures.length === 0) { %>
            <div class="col-12">
                <p>No pictures found :(</p>
            </div>
        <% } else { %>
            <% for (let i = 0; i < pictures.length; i++) { %>
                <div class="col-4 d-flex border border-1 border-dark" style="flex-direction: column">
                    <h4><%= pictures[i].title %></h4>
                    <img src="<%= pictures[i].url%>" alt="image">
                    <h6>Created at: <%= `${new Date(pictures[i].createdAt).getDate()}/${new Date(pictures[i].createdAt).getMonth()+1}/${new Date(pictures[i].createdAt).getFullYear()}` %></h6>
                </div>
        <% }} %>
    </div>
</div>
<%- include('footer') -%>